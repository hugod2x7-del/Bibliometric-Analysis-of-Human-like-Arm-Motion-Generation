@inproceedings{ WOS:000399031200120,
Author = {Luo, Ren C. and Hung, Wen C. and Chatila, Raja},
Book-Group-Author = {IEEE},
Title = {Mimicking Human Push-Recovery Strategy based on Five-Mass with Angular

@inproceedings{ WOS:000396584300059,
Author = {Hoffman, Enrico Mingo and Perrin, Nicolas and Tsagarakis, Nikos G. and
   Caldwell, Darwin G.},
Book-Group-Author = {IEEE},
Title = {Upper limb compliant strategy exploiting external physical constraints
   for humanoid fall avoidance},
Booktitle = {2013 13TH IEEE-RAS INTERNATIONAL CONFERENCE ON HUMANOID ROBOTS
   (HUMANOIDS)},
Series = {IEEE-RAS International Conference on Humanoid Robots},
Year = {2013},
Pages = {397-402},
Note = {13th IEEE-RAS International Conference on Humanoid Robots (Humanoids),
   Atlanta, GA, OCT 15-17, 2013},
Organization = {IEEE RAS},
Abstract = {Ensuring humanoid balance stability to prevent falling is one of the
   most crucial control problems in humanoid robotics and has been
   extensively studied in the past, resulting in a diverse range of balance
   recovery schemes. These balancing control methods effectively perform
   body posture control using three main motion strategies, namely: ankle,
   ankle-hip and stepping strategies. In this work we present a novel
   balance strategy which fundamentally differs from the previous methods
   as its principle is to exploit contacts with the environment to prevent
   falling rather than only performing body posture control. An uncoupled
   impedance controller for the upper body of the humanoid robot is
   combined with a lower body stabilizer, and the balancing capabilities
   are enhanced by the establishment of additional physical contacts with
   the environment. The generation of the reactive arm motion and the
   impedance regulation are discussed in details. Experimental trials with
   the humanoid robot COMAN, provided with active and passive compliance,
   demonstrate the potential of the approach and the first step towards the

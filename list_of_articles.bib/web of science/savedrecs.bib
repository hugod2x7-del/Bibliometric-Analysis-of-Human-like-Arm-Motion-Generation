@article{ WOS:000681648500008,
Author = {Xia, Jing and Jiang, Zai-nan and Zhang, Ting},
Title = {Feasible Arm Configurations and its Application for Human-Like Motion
   Control of S-R-S-Redundant Manipulators with Multiple Constraints},
Journal = {ROBOTICA},
Year = {2021},
Volume = {39},
Number = {9},
Pages = {1617-1633},
Month = {SEP},
Abstract = {This paper presents a general framework for human-like motion control of
   7-DOF S-R-S-redundant manipulators. The new framework simultaneously
   accomplishes five objectives: Cartesian trajectory tracking, obstacle
   avoidance, joint limit avoidance, human-like movement, and a feasibility
   evaluation of the Cartesian trajectory.We exhaustively compute all
   feasible arm configurations. This allows for quick evaluations of the
   feasibility of the Cartesian trajectories. They are applied to inverse
   kinematics of the redundant manipulator to improve the capability to
   handle multiple constraints, and enable the manipulator to imitate human
   movements. The efficiency of the proposed framework is demonstrated by
   kinematic experiments with a humanoid robot.},

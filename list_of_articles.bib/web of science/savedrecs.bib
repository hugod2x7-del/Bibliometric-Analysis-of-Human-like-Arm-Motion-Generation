@inproceedings{ WOS:000563479900043,
Author = {Pavlichenko, Dmytro and Rodriguez, Diego and Lenz, Christian and
   Schwarz, Max and Behnke, Sven},
Book-Group-Author = {IEEE},
Title = {Autonomous Bimanual Functional Regrasping of Novel Object Class
   Instances},

  year={2007},
  volume={},
  number={},
  pages={2281-2287},
  abstract={Robots' interaction with humans raises new issues for geometrical reasoning where the humans must be taken explicitly into account. We claim that a human-aware motion system must not only elaborate safe robot motions, but also synthesize good, socially acceptable and legible movement. This paper focuses on a manipulation planner and a placement mechanism that take explicitly into account its human partners by reasoning about their accessibility, their vision field and their preferences. This planner is part of a human-aware motion and manipulation planning and control system that we aim to develop in order to achieve motion and manipulation tasks in presence or in synergy with humans.},
  keywords={Human robot interaction;Safety;Mobile robots;Intelligent robots;Motion planning;Service robots;Robot sensing systems;Collaboration;USA Councils},
  doi={10.1109/IROS.2007.4399486},
  ISSN={2153-0866},
  month={Oct},}@INPROCEEDINGS{7030005,
  author={Hoffman, Enrico Mingo and Perrin, Nicolas and Tsagarakis, Nikos G. and Caldwell, Darwin G.},
  booktitle={2013 13th IEEE-RAS International Conference on Humanoid Robots (Humanoids)}, 
  title={Upper limb compliant strategy exploiting external physical constraints for humanoid fall avoidance}, 
  year={2013},
  volume={},
  number={},
  pages={397-402},
  abstract={Ensuring humanoid balance stability to prevent falling is one of the most crucial control problems in humanoid robotics and has been extensively studied in the past, resulting in a diverse range of balance recovery schemes. These balancing control methods effectively perform body posture control using three main motion strategies, namely: ankle, ankle-hip and stepping strategies. In this work we present a novel balance strategy which fundamentally differs from the previous methods as its principle is to exploit contacts with the environment to prevent falling rather than only performing body posture control. An uncoupled impedance controller for the upper body of the humanoid robot is combined with a lower body stabilizer, and the balancing capabilities are enhanced by the establishment of additional physical contacts with the environment. The generation of the reactive arm motion and the impedance regulation are discussed in details. Experimental trials with the humanoid robot COMAN, provided with active and passive compliance, demonstrate the potential of the approach and the first step towards the development of more human-like balancing skills using an integrated approach where all body parts (not only legs but also arms and hands) can establish contacts with the surrounding environment so as to ensure a stable and balanced behavior.},
  keywords={Joints;Humanoid robots;Optimization;Transmission line matrix methods;Manipulators;Impedance},
  doi={10.1109/HUMANOIDS.2013.7030005},
  ISSN={2164-0580},
  month={Oct},}@INPROCEEDINGS{7793100,
  author={Luo, Ren C. and Hung, Wen C. and Chatila, Raja},
  booktitle={IECON 2016 - 42nd Annual Conference of the IEEE Industrial Electronics Society}, 
  title={Mimicking human push-recovery strategy based on five-mass with angular momentum model}, 
  year={2016},
  volume={},
  number={},
  pages={716-721},
  abstract={As humanoid robots start entering to the human beings environments, the collision between the robot and other objects is inevitable. To solve this problem, we propose the human mimicking push-recovery strategy. With the arm mechanism, the humanoid robot utilizes human-like strategies to deal with the unexpected collision. We analyse the human push-recovery movement to the external force. Thus we can design the trajectory generator to mimic human beings reactions. To reduce the modelling error and improve zmp stability, we utilizes the five-mass with angular momentum model as humanoid robot model. We design the safe bound examination and the Center of Mass (COM) state estimator to judge the collision stage. The safe bound examination is used to guarantee the walking stability. Moreover, the COM state estimator is used to determine whether the pushing is over or not. The push-recovery control system is implemented on the humanoid robot developed in our NTU-iCeiRA lab. The purpose of this paper aims to integrate different push-recovery strategies while encountering different collision conditions based on the five-mass with angular momentum model.},
  keywords={Legged locomotion;Collision avoidance;Humanoid robots;Trajectory;Robot kinematics;Force},
  doi={10.1109/IECON.2016.7793100},
  ISSN={},
  month={Oct},}@INPROCEEDINGS{6631283,
  author={Li, Boren and Zheng, Yuan F. and Hemami, H. and Da Che},
